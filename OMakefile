LATEX     = platex
LATEXFLAG = --kanji=utf8
DVIPDFM = dvipdfmx

TARGETS = word.cls word.clo
DOCUMENT = word.pdf
TEXDTX = word.dtx
TEXINS = word.ins

.DEFAULT: $(TARGETS)

.PHONY: clean all

$(TARGETS) : % : $(TEXINS) $(TEXDTX)
	$(LATEX) $(LATEXFLAG) $<

$(DOCUMENT) : % : $(TEXDTX)
	$(LATEX) $(LATEXFLAG) $<
	$(LATEX) $(LATEXFLAG) $<
	$(DVIPDFM) $*

all: $(TARGETS) $(DOCUMENT)


clean:
	rm *.aux *.cls *.clo *.log *.toc *.dvi *.pdf *.out


